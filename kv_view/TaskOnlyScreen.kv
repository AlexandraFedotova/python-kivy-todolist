#:kivy 2.0

#MDScreen
<TaskOnlyScreen>:
    name: 'taskOnly'

    task_name: task_name
    task_description: task_description
    task_category: task_category
    toolbar: toolbar

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: toolbar
            title: 'Task'
            opposite_colors: True
            elevation: 10

            left_action_items: [["arrow-left", lambda x: app.remove_task_only_screen()]]

        MDGridLayout:
            cols: 1
            padding: '10sp'
            spacing: '10sp'

            MDTextField:
                id: task_category
                multiline: True
                write_tab: False

                text_color_normal: 0, 0, 0, 1
                text_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1
                line_color_focus: 0, 0, 0, 1

                on_focus: root.show_category_menu()

            MDTextField:
                id: task_name
                multiline: True
                write_tab: False

                text_color_normal: 0, 0, 0, 1
                text_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1
                line_color_focus: 0, 0, 0, 1

                on_focus: root.allow_task_editing()

            MDTextField:
                id: task_description
                multiline: True

                text_color_normal: 0, 0, 0, 1
                text_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1
                line_color_focus: 0, 0, 0, 1

                on_focus: root.allow_task_editing()
